<script>
    console.clear();

// Just having fun experimenting with CSS grid
// This is a simple grid which could be improved upon, but already looks kind of nice!
// JS by luispato - https://www.instagram.com/luispaaaaato
class Grid {
  constructor(gridEl) {
    this.gridEl = gridEl;
    this._images = this.gridEl.querySelectorAll('.grid__figure');
    this._closeButton = this.gridEl.querySelector('.grid__close');
    this._activeImage = null;

    if (!this._images || !this._closeButton) {
      console.log('Error initialising the Grid! Could not get all elements');
      return;
    }

    this._init();
  }

  // Add click listeners to the images and close button
  _init = () => {
    this._images.forEach((image) => {
      image.addEventListener('click', this._onImageClick);
    });

    this._closeButton.addEventListener('click', this._onCloseClick);
  }

  // Set clicked image as active image and trigger ui update
  _onImageClick = (event) => {
    this._activeImage = event.currentTarget;
    this._updateUI();
  }

  // reset active image and trigger ui update
  _onCloseClick = () => {
    this._activeImage = null;
    this._updateUI();
  }

  // update ui by adding / removing the 'open' attribute from the grid and 'active' attribut from the active image
  _updateUI = () => {
    this._activeImage
      ? this.gridEl.setAttribute('open', '')
      : this.gridEl.removeAttribute('open');
    
    this._images.forEach((image) => {
      image === this._activeImage
        ? image.setAttribute('active', '')
        : image.removeAttribute('active');
    })
  }
}

// Get grid element
const gridEl = document.querySelector('.grid');

// Initialize
const grid = new Grid(gridEl);

